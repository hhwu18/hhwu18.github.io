# Gemfile (用于 Jekyll 网站的最终正确版)

source "https://rubygems.org"

# 锁定 Jekyll 到一个已知的稳定且兼容的版本
gem "jekyll", "~> 4.3.0"

# 你网站使用的主题
gem "minimal-mistakes-jekyll"

# 其他兼容的插件
gem "jekyll-feed"
gem "jekyll-seo-tag"
gem "jekyll-sitemap"
gem "jekyll-paginate"
gem "jekyll-include-cache"

# Windows 特定 gem，在 macOS 上会被忽略，保留也无妨
gem "wdm", "~> 0.1.1", :platforms => [:mswin, :mingw, :x64_mingw]